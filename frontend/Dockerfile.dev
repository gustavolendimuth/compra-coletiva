# Dockerfile para desenvolvimento com hot reload (Next.js)
FROM node:20-alpine
WORKDIR /app

# Copia package.json
COPY package*.json ./

# Instala dependências
RUN npm install

# Copia o código fonte
COPY . .

# Expõe a porta do Next.js
EXPOSE 3000

# Comando será sobrescrito pelo docker-compose
CMD ["npm", "run", "dev"]

FROM node:20-alpine

# Instala OpenSSL e outras dependências necessárias para o Prisma e backup
RUN apk add --no-cache openssl libc6-compat postgresql-client

WORKDIR /app

# Copia package files e prisma schema primeiro
COPY package*.json ./
COPY prisma ./prisma

# Instala dependências (postinstall automaticamente gera Prisma Client)
RUN npm install

# Bypass checksum validation if Prisma's binary server is down
ENV PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1

# Garante que o Prisma Client está gerado
RUN npx prisma generate

# Expõe portas do backend e Prisma Studio
EXPOSE 3000 5555

# Comando de desenvolvimento com hot reload
# O código fonte será montado via volume no docker-compose
# tsx watch monitora mudanças e reinicia automaticamente
CMD ["npm", "run", "dev"]

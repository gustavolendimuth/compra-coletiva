generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========== AUTHENTICATION MODELS ==========

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String?  // Nullable para Google OAuth
  name         String   // Removed @unique - uniqueness enforced at app level for non-legacy users
  role         UserRole @default(CUSTOMER)
  googleId     String?  @unique
  isLegacyUser Boolean  @default(false) // Flag para diferenciar usuários virtuais (legados) de usuários reais
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Campaign Chat - Reputation & Rate Limiting
  messageCount  Int      @default(0)      // Total de perguntas feitas
  answeredCount Int      @default(0)      // Total de respostas fornecidas (criadores apenas)
  spamScore     Float    @default(0)      // Pontuação de risco 0-100
  lastMessageAt DateTime?                 // Para rate limiting
  isBanned      Boolean  @default(false)  // Não pode enviar mensagens

  // Relações
  campaigns                Campaign[]            @relation("CampaignCreator")
  orders                   Order[]               @relation("CustomerOrders")
  sentMessages             OrderMessage[]        @relation("MessageSender")
  sentCampaignMessages     CampaignMessage[]     @relation("SentCampaignMessages")
  answeredCampaignMessages CampaignMessage[]     @relation("AnsweredCampaignMessages")
  sessions                 Session[]
  passwordResetTokens      PasswordResetToken[]
  notifications            Notification[]
  feedback                 Feedback[]

  @@map("users")
  @@index([email])
  @@index([googleId])
  @@index([name])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  metadata  Json?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@map("notifications")
  @@index([userId, read])
  @@index([userId, createdAt])
}

enum NotificationType {
  CAMPAIGN_READY_TO_SEND
  CAMPAIGN_STATUS_CHANGED
  CAMPAIGN_ARCHIVED
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

enum UserRole {
  ADMIN
  CAMPAIGN_CREATOR
  CUSTOMER
}

// ========== BUSINESS MODELS ==========

model Campaign {
  id          String    @id @default(cuid())
  name        String
  description String?
  status      CampaignStatus @default(ACTIVE)
  deadline    DateTime?
  shippingCost Float    @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Auth - NULLABLE durante migração
  creatorId   String?
  creator     User?     @relation("CampaignCreator", fields: [creatorId], references: [id])

  products    Product[]
  orders      Order[]
  messages    CampaignMessage[]

  @@map("campaigns")
  @@index([creatorId])
  @@index([status])
}

model Product {
  id          String   @id @default(cuid())
  campaignId  String
  name        String
  price       Float
  weight      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]

  @@map("products")
  @@index([campaignId])
}

model Order {
  id          String   @id @default(cuid())
  campaignId  String
  customerName String?  // Mantém para histórico/legado (agora opcional)
  isPaid      Boolean  @default(false)
  isSeparated Boolean  @default(false)
  subtotal    Float    @default(0)
  shippingFee Float    @default(0)
  total       Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Auth - OBRIGATÓRIO para novos pedidos
  userId      String
  customer    User     @relation("CustomerOrders", fields: [userId], references: [id])

  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  items       OrderItem[]
  messages    OrderMessage[]

  @@map("orders")
  @@index([campaignId])
  @@index([customerName])
  @@index([userId])
  @@index([campaignId, userId])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int
  unitPrice   Float
  subtotal    Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
  @@index([orderId])
  @@index([productId])
}

model OrderMessage {
  id          String   @id @default(cuid())
  orderId     String

  // Campos legado - mantém para compatibilidade com mensagens antigas
  senderName  String?
  senderType  MessageSenderType?

  // Novos campos auth
  senderId    String?
  sender      User?    @relation("MessageSender", fields: [senderId], references: [id])
  isRead      Boolean  @default(false)

  message     String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_messages")
  @@index([orderId])
  @@index([senderId])
  @@index([orderId, isRead])
}

enum MessageSenderType {
  ADMIN
  CUSTOMER
}

enum CampaignStatus {
  ACTIVE
  CLOSED
  SENT
  ARCHIVED
}

// ========== FEEDBACK SYSTEM ==========

model Feedback {
  id          String       @id @default(cuid())
  userId      String?
  user        User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  type        FeedbackType
  title       String
  description String       @db.Text
  email       String?      // Email para feedback anônimo
  status      FeedbackStatus @default(PENDING)
  adminNotes  String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("feedback")
  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
}

enum FeedbackType {
  BUG
  SUGGESTION
  IMPROVEMENT
  OTHER
}

enum FeedbackStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  DISMISSED
}

// ========== CAMPAIGN CHAT MODELS ==========

model CampaignMessage {
  id         String   @id @default(cuid())
  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  // Pergunta (do usuário)
  senderId   String
  sender     User     @relation("SentCampaignMessages", fields: [senderId], references: [id], onDelete: Cascade)
  question   String   @db.Text
  isEdited   Boolean  @default(false)
  editedAt   DateTime?

  // Resposta (do criador)
  answer     String?  @db.Text
  answeredAt DateTime?
  answeredBy String?
  answerer   User?    @relation("AnsweredCampaignMessages", fields: [answeredBy], references: [id], onDelete: SetNull)

  // Metadata
  spamScore  Float    @default(0)      // Pontuação de spam 0-100
  isPublic   Boolean  @default(false)  // Verdadeiro apenas após resposta
  metadata   Json?                     // Fatores de spam para análise

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("campaign_messages")
  @@index([campaignId, isPublic, createdAt])
  @@index([senderId, createdAt])
  @@index([campaignId, isPublic])
}
